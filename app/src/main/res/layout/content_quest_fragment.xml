<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.sebastian.clausing.quester.screens.FragmentQuest"
    tools:showIn="@layout/activity_quest_fragment"
    tools:layout_editor_absoluteX="0dp"
    app:layout_constraintBottom_toBottomOf="@+id/txtV_action_description"
    android:layout_marginBottom="8dp">

    <TextView
        android:id="@+id/txtV_HL1"
        android:textSize="22dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Character motivation and strategy: "
        android:textAlignment="center"
        android:textColor="@color/colorHL"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.050000012" />

    <TextView
        android:id="@+id/txtV_QuestGiver"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textStyle="italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quest Giver"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/colorWhiteText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtV_HL1"
        app:layout_constraintVertical_bias="0.100000024"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />



    <View
        android:id="@+id/V_Seperator"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/colorHL"
        android:layout_marginTop="40dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtV_QuestGiver"
        app:layout_constraintHorizontal_bias="0.0" />



    <TextView
        android:id="@+id/txtV_GoodLuck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quest Description:"
        android:textColor="@color/colorHL"
        android:textSize="22dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/V_Seperator"
        app:layout_constraintVertical_bias="0.100000024"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="0.504" />

    <TextView
        android:id="@+id/txtV_QuestDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textStyle="italic"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/colorWhiteText"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtV_GoodLuck"
        app:layout_constraintVertical_bias="0.100000024"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>
